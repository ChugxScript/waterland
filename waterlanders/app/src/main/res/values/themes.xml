<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Waterlanders" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="android:windowBackground">@android:color/transparent</item> <!-- Set to transparent -->
        <item name="android:statusBarColor">@android:color/transparent</item> <!-- Make status bar transparent -->
        <item name="android:windowLightStatusBar">true</item> <!-- Use light status bar text/icons (optional) -->

        <item name="android:textColorHighlight">@color/bg1</item>
        <item name="android:textSelectHandleLeft">@drawable/custom_text_select_handle_left</item>
        <item name="android:textSelectHandleRight">@drawable/custom_text_select_handle_right</item>



    </style>

    <style name="Theme.Waterlanders" parent="Base.Theme.Waterlanders" />

    <style name="Theme.Transparent" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowDisablePreview">true</item>
        <item name="android:windowBackground">@drawable/gradient_bg</item>
        <item name="android:statusBarColor">@android:color/transparent</item> <!-- Ensure status bar is transparent -->
        <item name="android:windowLightStatusBar">true</item>
    </style>


    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:statusBarColor">@color/button_bg</item>
        <item name="android:windowLightStatusBar">true</item> <!-- Use this if you want dark icons on the status bar -->
    </style>


    <style name="Base.Theme.app" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Add other theme attributes here -->
        <item name="navigationViewStyle">@style/Widget.NavigationView.Custom</item>
    </style>

    <style name="Widget.NavigationView.Custom" parent="Widget.MaterialComponents.NavigationView">
        <item name="itemTextColor">@color/button_bg</item>
        <item name="itemIconTint">@color/button_bg</item>
    </style>

    <style name="ThemeOverlay.AppCompat.navTheme">

        <!-- Color of text and icon when SELECTED -->
        <item name="colorPrimary">@color/white</item>

        <!-- Background color when SELECTED -->
        <item name="colorControlHighlight">@color/button_bg</item>

    </style>

    <style name="Theme_Dialog" parent="android:Theme.Light">
        <item name="android:windowNoTitle">true</item>
    </style>


    <style name="ButtonTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your theme here -->
    </style>

    <style name="MyCancelButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="strokeColor">@color/button_bg</item>
        <item name="strokeWidth">1dp</item>
        <item name="android:textColor">@color/button_bg</item>
        <item name="cornerRadius">25dp</item>
        <item name="android:textSize">12sp</item>

    </style>

    <style name="OrderTrackingButton" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/screen_bg</item>
        <item name="cardCornerRadius">25dp</item>
        <item name="cardElevation">4dp</item>
        <item name="contentPadding">16dp</item>
        <!-- You can add other CardView-specific attributes here -->
    </style>

    <style name="MyOkButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="backgroundTint">@color/button_bg</item>
        <item name="android:textColor">@color/white</item>
        <item name="cornerRadius">25dp</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="MyApproveButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="backgroundTint">@color/button_bg</item>
        <item name="android:textColor">@color/white</item>
        <item name="cornerRadius">20dp</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="MyRejectButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="backgroundTint">@color/red</item>
        <item name="android:textColor">@color/white</item>
        <item name="cornerRadius">20dp</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="OrderButton" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/button_bg</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">12sp</item>
        <item name="fontFamily">@font/robotoregular</item>
        <item name="android:text">Buy Now</item>
        <item name="android:radius">0dp</item>
        <item name="cornerRadius">0dp</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="EditOrderButton" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/button_bg</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">12sp</item>
        <item name="fontFamily">@font/robotoregular</item>
        <item name="android:text">Update Order</item>
        <item name="android:radius">0dp</item>
        <item name="cornerRadius">0dp</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="textAllCaps">false</item>
    </style>


    <style name="PlaceOrder" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/button_bg</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">12sp</item>
        <item name="fontFamily">@font/robotoregular</item>
        <item name="android:text">Place Order</item>
        <item name="android:radius">0dp</item>
        <item name="cornerRadius">0dp</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="TextInputLayoutAppearance" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="colorControlNormal">@color/white</item>
        <item name="colorControlActivated">@color/white</item>
        <item name="colorControlHighlight">@color/white</item>
    </style>

        <!-- Base application theme. -->
    <style name="AppTheme.NoActionBar.FullScreen" parent="Theme.Material3.DayNight.NoActionBar">
            <item name="android:statusBarColor">@color/bg2</item>
    </style>

    <style name="CustomNavigationViewStyle" parent="Widget.MaterialComponents.NavigationView">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay.NoRoundedCorners</item>
    </style>

    <style name="ShapeAppearanceOverlay.NoRoundedCorners" parent="">
        <item name="cornerSize">0dp</item>
    </style>

    <style name="Theme.AppCompat.NoActionBar.FullScreen" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>


    <style name="text_input" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your theme here -->
    </style>

    <!-- Custom Style for TextInputLayout -->
    <style name="CustomTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <!-- Customize the box appearance -->
        <item name="boxBackgroundColor">@color/white</item>
        <item name="boxStrokeColor">@color/black</item>
        <item name="boxCornerRadiusTopStart">8dp</item>
        <item name="boxCornerRadiusTopEnd">8dp</item>
        <item name="boxCornerRadiusBottomStart">8dp</item>
        <item name="boxCornerRadiusBottomEnd">8dp</item>

        <!-- Customize hint appearance -->
        <item name="hintTextColor">@color/gray</item>
        <item name="hintTextAppearance">@style/CustomHintTextAppearance</item>

        <!-- Customize label text appearance (floating label) -->
        <item name="placeholderTextAppearance">@style/CustomLabelTextAppearance</item>
    </style>

    <!-- Custom style for hint text -->
    <style name="CustomHintTextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/gray</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!-- Custom style for label text (floating label) -->
    <style name="CustomLabelTextAppearance" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textColor">@color/black</item>
    </style>

    <!-- Custom DatePicker style -->
    <style name="CustomDatePickerDialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/button_bg</item> <!-- Selected date color -->
        <item name="android:datePickerDialogTheme">@style/CustomDatePicker</item>
    </style>

    <!-- Custom DatePicker Theme -->
    <style name="CustomDatePicker" parent="android:Widget.Material.DatePicker">
        <item name="android:headerBackground">@color/button_bg</item> <!-- Header background color -->
        <item name="android:datePickerMode">spinner</item> <!-- Spinner or Calendar mode -->

    </style>

    <!-- Custom Button Style -->
    <style name="CustomButton" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@color/button_bg</item>
    </style>

</resources>

